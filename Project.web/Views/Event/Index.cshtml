@model IEnumerable<Project.domain.models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Category
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CIdNavigation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visibility)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                    @if (item.Status == 0)
                    {
                    <td>
                        Pending
                    </td>
                    }
                @if (item.Status == 1)
                {
                    <td>
                        Approved
                    </td>
                }
                @if (item.Status == 2)
                {
                    <td>
                        Denied
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Location.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rso.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EId" title="Edit"><i class="fa-solid fa-pen-to-square"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.EId" title="Details"><i class="fa-solid fa-circle-info"></i></a> |
                    <a asp-action="Picture" asp-route-id="@item.EId" title="Pciture">Add Image</a> |
                    <a asp-action="Delete" asp-route-id="@item.EId" title="Delete"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
