@model Project.domain.models.University

@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Description)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Students
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumStudents)
        </dd>
        <dt class="col-sm-2">
            Super Admin
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedByNavigation.FirstName) @Html.DisplayFor(model => model.CreatedByNavigation.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location.Name)
        </dd>
    </dl>
</div>
<div class="row">
    @foreach (var item in Model.UniPictures)
    {
        <div class="col-md-2">
            <a asp-action="FullSize" asp-route-id="@item.PId"> <img class="img-fluid" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Picture))"></a>
        </div>
    }

</div>

@foreach (Event item in Model.Events.Where(x => x.Visibility == "University"))
{
    <partial name="_Event" model="@item" />
}

<div class="row">
    <div class="col-md-6">
        <a asp-action="uni" class="btn btn-outline-secondary" asp-controller="Rso">Manage your RSO's</a>
    </div>
</div>
