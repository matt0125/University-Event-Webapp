@model RSOMemberManage

@foreach (Rso item in Model.RSOs)
{
    <div class="row">

        <div class="col-md-3">

            @item.Name

        </div>
        <div class="col-md-1">

            @if (item.RsoMembers.Any(x=> x.UserId == Model.User.UserId))
            {
                <a asp-action="Leave" asp-controller="Rso" asp-route-id="@item.RsoId" class="btn btn-outline-secondary" title="Leave @item.Name">Leave</a>
            }
            else
            {
                <a asp-action="Join" asp-controller="Rso" asp-route-id="@item.RsoId" class="btn btn-outline-secondary" title="Join @item.Name">Join</a>
            }


        </div>
        <div class="col-md-1">
        </div>
        <div class="col-md-3">
        </div>
        <div class="col-md-12">
        </div>
    </div>
}
